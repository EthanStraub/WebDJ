@model IEnumerable<WebDjProject.Models.Playlist>

@{
    ViewBag.Title = "Playlists";
}

<h2>Playlists</h2>

@if (Model.Count() == 0)
{
    <div class="jumbotron">
        <h2>There doesn't seem to be anything here...</h2>
        <h5>Other users have likely privatized their account, preventing you from seeing their playlists.</h5>
    </div>
}
else
{
    <div class="jumbotron">
    @foreach (var item in Model)
    {
        <h3>@item.playlistName</h3>
        <iframe src="https://open.spotify.com/embed/playlist/@item.spotifyPlaylistID" width="300" height="300" frameborder="2" allowtransparency="true" allow="encrypted-media"></iframe>

    }
</div>
}


